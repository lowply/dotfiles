[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
	ui = auto

[merge]
	ff = false
	conflictstyle = zdiff3

[pull]
	ff = only

[grep]
	lineNumber = true

[alias]
	s = status
	b = branch
	co = checkout
	d = diff
	l = log --graph -n 20 --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset'

	# http://blog.blindgaenger.net/advanced_git_aliases.html
	this = !git init && git add . && git commit -m \"Initial commit\"
	r = !git ls-files -z --deleted | xargs -0 git rm
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\t=> \\2/' | sort
	ignore = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >>.gitignore

[filter "media"]
	clean = git-media-clean -- %f
	smudge = git-media-smudge -- %f

[docc]
	cmd = more

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process

[core]
	pager = delta ; install delta via https://dandavison.github.io/delta/installation.html
	editor = vim
	excludeFiles = ~/.gitignore

[delta]
	navigate = true
	light = false

[push]
	default = current

[github]
	user = lowply

[user]
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIOLaQnurE5ml8aUZaaF6BINBT+ThbQ3UGlwkXaRLhQUz
	username = lowply
	name = Sho Mizutani
	email = sho@svifa.net

[includeIf "gitdir:~/ghq/github.com/github/"]
    path = ~/.gitconfig.work

[commit]
	verbose = true
	gpgsign = true

[interactive]
	diffFilter = delta --color-only

[diff]
	algorithm = histogram
	compactionHeuristic = true
	submodule = log
	colorMoved = default

[rebase]
	autosquash = true

[gpg]
	format = ssh

[tag]
	gpgSign = true

[init]
	defaultBranch = main

[include]
	path = ~/.gitconfig.local

[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowedSigners

[fetch]
	prune = true

[log]
	date = iso
