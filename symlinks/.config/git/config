[includeIf "gitdir:~/ghq/github.com/github/"]
	path = ~/.config/git/config.work

[commit]
	verbose = true
	gpgsign = true

[diff]
	tool = difftastic

[difftool]
	prompt = false

[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"

[pager]
	difftool = true

[rebase]
	autosquash = true

[gpg]
	format = ssh

[tag]
	gpgSign = true

[init]
	defaultBranch = main

[include]
	path = ~/.gitconfig.local

[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowedSigners

[fetch]
	prune = true

[log]
	date = iso
