#!/bin/bash

usage(){
    grep ^#/ < "$0" | cut -c 4-
    exit 1
}

has(){
    type ${1} > /dev/null 2>&1 
    return $?
}

log(){
    if [ -z ${LOGFILE} ]
        echo "\$LOGFILE is not defined."
        exit 1
    fi
    echo "${1}" | ts | tee -a ${LOGFILE}
}

abort(){
    log "Error: ${1}"
    exit 1
}
