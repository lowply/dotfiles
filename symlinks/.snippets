# date
date +%Y%m%d

# dstat
dstat -cdnlt --top-io --top-bio --top-cpu --top-cputime --top-cputime-avg --top-mem

# ps
ps auxwww --sort=rss

# open port on macOS
sudo lsof -PiTCP -sTCP:LISTEN | grep "IPv4"

# reset DNS cache on macOS
sudo killall -HUP mDNSResponder

# epoch now
date -ju '+%F %T %Z';

# epoch
date -jur $1 '+%F %T %Z';

# kill AMPLibraryAgent
killall AMPLibraryAgent

# cd dotfiles on CS
cd ${DOTFILES_DIR}

# source sshauthsock.sh
source ${DOTFILES_DIR}/bin/sshauthsock.sh

# cd to iCloud Drive
cd ~/Library/Mobile\ Documents/com~apple~CloudDocs

# echo hostname
echo "https://$(grep HELPHUB_HOSTNAME .env | cut -d '=' -f 2)"

# Create a new Codespaces instance
gh cs create --repo github/github --branch master --devcontainer-path .devcontainer/devcontainer.json --machine 'xLargePremiumLinux' --location 'SouthEastAsia' --display-name "$(date +%Y-%m-%d)"

# Ghostty SSH
infocmp -x | : ssh HOST -- tic -x -

