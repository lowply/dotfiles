call pathogen#runtime_append_all_bundles()
set t_Co=256
syntax enable
colorscheme molokai

set nocompatible
set tabstop=4 shiftwidth=4 softtabstop=0
set expandtab
set autoindent
set smartindent
set showmatch
set showcmd
set wrap
set notitle
set scrolloff=5
set laststatus=2
set smarttab
set nowrapscan
set nu
set number
set history=50

set termencoding=utf-8
set encoding=japan
set fileencodings=utf-8,latin1
set fenc=utf-8
set enc=utf-8

set hlsearch
set incsearch
set ignorecase
set smartcase

